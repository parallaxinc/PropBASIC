' ----------------------------------------------------------------------
' Device Settings
' ----------------------------------------------------------------------
DEVICE          P8X32A, XTAL1, PLL16X
XIN             5_000_000

' ----------------------------------------------------------------------
' GLOBAL: I/O Pins
' ----------------------------------------------------------------------
TX_PIN     PIN   30 INPUT

' ----------------------------------------------------------------------
' GLOBAL: Constants
' ----------------------------------------------------------------------
Terminal_Baud   CON   115200

' ----------------------------------------------------------------------
' GLOBAL: HUB Variables (Byte, Word, Long) - use RDxxxx and WRxxxx
' ----------------------------------------------------------------------


' ----------------------------------------------------------------------
' GLOBAL: DATA, WDATA, LDATA, FILE - use RDxxxx and WRxxxx
' ----------------------------------------------------------------------


' ----------------------------------------------------------------------
' COG 0: Variables (Long only)
' ----------------------------------------------------------------------
TX_BAUD   VAR   LONG

Temp        VAR   Long

Value       VAR   Long




' ----------------------------------------------------------------------
' COG 0: SUB & FUNC Definitions
' ----------------------------------------------------------------------
LOAD "D:\Propeller\Propeller Programs\Libraries\TX_RX_LIB.pbas"
LOAD "D:\Propeller\Propeller Programs\Libraries\UTILS_LIB.pbas"


' ----------------------------------------------------------------------
' TASK Definitions
' ----------------------------------------------------------------------


' ======================================================================
  PROGRAM START
' ======================================================================

START:

TX_BAUD = Terminal_Baud
PAUSE 5000
SEROUT TX_PIN, T115200, 16

Main:

   Value = %1010101
   
   Temp = Copy_Bit Value, 0, Temp, 0
   TX_BIN Temp, 32
   TX_BYTE 13
   TX_BYTE 13
   
   Temp = Copy_Bit Value, 1, Temp, 0
   TX_BIN Temp, 32
   TX_BYTE 13
   TX_BYTE 13
   
   Temp = Copy_Bit Value, 4, Temp, 7
   TX_BIN Temp, 32
   TX_BYTE 13
   TX_BYTE 13
   
   Temp = Copy_Bit Value, 5, Temp, 7
   TX_BIN Temp, 32
   TX_BYTE 13
   TX_BYTE 13
   
   Temp = Copy_Bit Value, 5, Temp, 7
   TX_BIN Temp, 32
   TX_BYTE 13
   TX_BYTE 13
   
   Temp = Copy_Bit Value, 2, Temp, 31
   TX_BIN Temp, 32
   TX_BYTE 13
   TX_BYTE 13
   
   Temp = Copy_Bit %1, 0, Temp, 2   ' Bit is a literal
   TX_BIN Temp, 32
   TX_BYTE 13
   TX_BYTE 13
   
   Temp = Copy_Bit %0, 0, Temp, 31   ' Bit is a literal
   TX_BIN Temp, 32
   TX_BYTE 13
   TX_BYTE 13
   
   


END  

' ----------------------------------------------------------------------
' COG 0: SUB & FUNC Code
' ----------------------------------------------------------------------